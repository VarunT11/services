<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/colorSecondaryText</item>
    </style>

    <style name="CardTheme" parent="AppTheme">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="backgroundTint">@color/btn_background</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="strokeColor">@color/btn_background</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="SmallButtonStyle" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppBarLabelStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeadingStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="SecondaryHeadingStyle" parent="HeadingStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="SmallHeadingStyle" parent="HeadingStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LargeHeadingStyle" parent="HeadingStyle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextViewStyle" parent="HeadingStyle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextServerUrlStyle" parent="TextViewStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="SmallTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavViewTheme">
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">4dp</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemTextAppearance">@style/TextViewStyle</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dividerPadding">4dp</item>
        <item name="headerLayout">@layout/drawer_header</item>
        <item name="menu">@menu/drawer_menu</item>
    </style>

    <style name="DropdownMenuTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnSurface">@color/colorSecondaryText</item>
        <item name="boxStrokeColor">@color/colorSecondaryText</item>
        <item name="strokeColor">@color/btn_background</item>
        <item name="hintTextColor">@color/colorSecondaryText</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>